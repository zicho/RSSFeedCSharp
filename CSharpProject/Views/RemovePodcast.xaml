<Window x:Class="CSharpProject.Views.RemovePodcast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpProject.Views"
        mc:Ignorable="d"
        Title="Remove Podcast" Height="120" Width="300"
        ResizeMode="NoResize">
    <Border Padding="10">
        <StackPanel>
            <ComboBox x:Name="cmbBoxPodcasts"/>
            <Button Width="125" Content="Delete" x:Name="DeleteBtn" Click="DeleteBtn_Click"/>

        </StackPanel>
    </Border>
</Window>
